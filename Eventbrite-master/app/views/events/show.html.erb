<html>
  <body>
    <div class="container justify-content-center text-center">
      <div class="col-lg-12">
        <h1>Bienvenue sur la page de l'événement <%= @event.title %> </h1>
        <div class="card">
		  <div class="card-body">
		  	<h3 class="card-title"><%= @event.title %></h3>
		  	  <p class="card-text">
                <%= @event.description %>
                <%= @event.price %><br>
                <%= @event.location %><br>
                <%= @event.start_date %><br>
              </p>
		  	  <blockquote class="blockquote mb-0">
		  		<footer class="blockquote-footer text-right">
                  <p>Durée en minutes : <%= @event.duration %><br></p>
                </footer></blockquote>
		  </div>
    	</div>
      </div>
    </div>
  </body>
</html>