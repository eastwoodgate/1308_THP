<html>
  <body>
    <div class="container justify-content-center text-center">
      <div class="col-lg-12">
        <h1>Bienvenue sur la page des événements</h1>
        <button class=" btn btn-dark btn-lg" role="button" aria-pressed="true"><%=link_to 'Nouvel événement ?', new_event_path %> </button>
          <% Event.all.each do |event| %>
          <div class="card">
            <div class="card-body">
                <h3 class="card-title"><%=link_to event.title, event_path(event.id) %> </h3>
                <p class="card-text"><%= event.description %></p>	    	
              </div>	
            </div>
          <% end %>
      </div>
    </div>
  </body>
</html>